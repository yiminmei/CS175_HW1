<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.wearable.whatsfordinner.NewDishActivity"
    tools:showIn="@layout/activity_new_dish">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Enter Recipe name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:inputType="textCapWords"
        android:maxLength="18"
        android:imeOptions="actionDone" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/chickenicon"
        android:layout_below="@+id/editText1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/plusicon2"
        android:onClick="getPicture"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/button7"
        android:layout_alignBottom="@+id/editText1"
        android:layout_alignRight="@+id/editText1"
        android:layout_alignEnd="@+id/editText1"
        android:onClick="goNext"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:fillViewport="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:fadeScrollbars="false">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarStyle="insideOverlay">
            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText2"
                android:maxLength="15"
                android:imeOptions="actionDone"
                android:inputType="textCapWords|number"
                android:hint="Amount"
                android:text="@string/zero"/>
            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/editText2"
                android:id="@+id/editText3"
                android:maxLength="15"
                android:imeOptions="actionDone"
                android:inputType="textCapWords|number"
                android:text="@string/zero"/>
            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/editText3"
                android:id="@+id/editText4"
                android:maxLength="15"
                android:imeOptions="actionDone"
                android:inputType="textCapWords|number"
                android:text="@string/zero"/>
            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/editText4"
                android:id="@+id/editText5"
                android:maxLength="15"
                android:imeOptions="actionDone"
                android:inputType="textCapWords|number"
                android:text="@string/zero"/>

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/editText5"
                android:id="@+id/editText6"
                android:maxLength="15"
                android:imeOptions="actionDone"
                android:inputType="textCapWords|number"
                android:text="@string/zero"/>
            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/editText6"
                android:id="@+id/editText7"
                android:maxLength="15"
                android:imeOptions="actionDone"
                android:inputType="textCapWords|number"
                android:text="@string/zero"/>
            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/editText7"
                android:id="@+id/editText8"
                android:maxLength="15"
                android:imeOptions="actionDone"
                android:inputType="textCapWords|number"
                android:text="@string/zero"/>
            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/editText8"
                android:id="@+id/editText9"
                android:maxLength="15"
                android:imeOptions="actionDone"
                android:inputType="textCapWords|number"
                android:text="@string/zero"/>
            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/editText9"
                android:id="@+id/editText10"
                android:maxLength="15"
                android:imeOptions="actionDone"
                android:inputType="textCapWords|number"
                android:text="@string/zero"/>
            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/editText10"
                android:id="@+id/editText11"
                android:maxLength="15"
                android:imeOptions="actionDone"
                android:inputType="textCapWords|number"
                android:text="@string/zero"/>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:id="@+id/spinner2"
                android:layout_toRightOf="@id/editText2" />
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/spinner2"
                android:id="@+id/spinner3"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/editText3" />
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/spinner3"
                android:id="@+id/spinner4"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/editText4" />
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/spinner4"
                android:id="@+id/spinner5"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/editText5" />
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/spinner5"
                android:id="@+id/spinner6"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/editText6" />
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/spinner6"
                android:id="@+id/spinner7"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/editText7" />
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/spinner7"
                android:id="@+id/spinner8"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/editText8" />
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/spinner8"
                android:id="@+id/spinner9"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/editText9" />
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/spinner9"
                android:id="@+id/spinner10"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/editText10" />
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/spinner10"
                android:id="@+id/spinner11"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/editText11" />

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
